@model airflight.Models.BookingDetail

@{
    ViewData["Title"] = "BookFlightDetails";
}

<h2> Your Flight Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bookingid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bookingid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flightid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flightid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Routeid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Routeid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doj)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doj)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Numberofpassengers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numberofpassengers) Passengers
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Totalvalue)
        </dt>
        <dd class = "col-sm-10">
           Rs. @Html.DisplayFor(model => model.Totalvalue)
        </dd>
        <dt class = "col-sm-2">Booked By </dt>
        <dd class = "col-sm-10"> @ViewBag.customerName </dd>
    </dl>
</div>
