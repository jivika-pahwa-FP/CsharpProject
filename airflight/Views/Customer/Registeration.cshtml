@model airflight.Models.CustomerDetail

@{
    ViewData["Title"] = "Registeration";
}

<h3>User Registeration</h3>

<p>
  <b>Already Registered ?</b>
   <button class="btn btn-warning"> <a asp-action="Login" style="color:white;">Login Here</a> </button>
</p>

<hr />
<div class="row">
    
    <img src="~/image/login2.jpg" alt="flight" width="400" height="300" align="right">
    <div class="col-md-4">
        <form asp-action="Registeration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customerid" class="control-label"></label>
                <input asp-for="Customerid" class="form-control" placeholder="Enter  ID"/>
                <span asp-validation-for="Customerid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customername" class="control-label"></label>
                <input asp-for="Customername" class="form-control"  placeholder="Enter  Name"/>
                <span asp-validation-for="Customername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input input type="password" asp-for="Password" class="form-control" placeholder="Enter Password " />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
